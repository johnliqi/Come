<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fl_main_bottom">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fac_main_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_40"
            android:backgroundTint="#FF4011"
            app:borderWidth="0dp"
            app:maxImageSize="50dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">


        <RadioGroup
            android:id="@+id/rg_main_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rg_main_top_shanghai"
                style="@style/main_radiobutton_style"
                android:drawableTop="@drawable/selector_main_top_button_shanghai"
                android:text="@string/str_main_shanghai" />

            <RadioButton
                android:id="@+id/rg_main_top_hangzhou"
                style="@style/main_radiobutton_style"
                android:drawableTop="@drawable/selector_main_top_button_hangzhou"
                android:text="@string/str_main_hangzhou" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg_main_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/rg_main_bottom_shenzhen"
                style="@style/main_radiobutton_style"
                android:drawableTop="@drawable/selector_main_top_button_shenzhen"
                android:text="@string/str_main_shenzhen" />

            <RadioButton
                android:id="@+id/rg_main_bottom_beijing"
                style="@style/main_radiobutton_style"
                android:drawableTop="@drawable/selector_main_top_button_beijing"
                android:text="@string/str_main_beijing" />
        </RadioGroup>

    </FrameLayout>

</RelativeLayout>